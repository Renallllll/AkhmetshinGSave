<Page x:Class="AkhmetshinGSave.GlSaveList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AkhmetshinGSave"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GlSaveList" FontFamily="Century Gothic">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0"
                   Grid.ColumnSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom">
            <!--СОРТИРОВКА-->
            <TextBox Name="TBoxSearch"
                     TextChanged="TBoxSearch_TextChanged"
                     Width="200"
                     Height="25"/>
            <ComboBox Name="ComboSort" SelectionChanged="ComboSort_SelectionChanged" Width="180" Height="25" Margin="5">
                <ComboBoxItem Content="Без сортировки"/>
                <ComboBoxItem Content="Название A-Z"/>
                <ComboBoxItem Content="Название Z-A"/>
                <ComboBoxItem Content="Скидка по возрастанию"/>
                <ComboBoxItem Content="Скидка по убыванию"/>
                <ComboBoxItem Content="Приоритет по возрастанию"/>
                <ComboBoxItem Content="Приоритет по убыванию"/>
            </ComboBox>
            <!--ФИЛЬТРАЦИЯ-->
            <ComboBox Name="ComboFilt"
                      SelectionChanged="ComboFilt_SelectionChanged"
                      Width="180"
                      Height="25"
                      Margin="5">
                <ComboBoxItem Content="Все типы"/>
                <ComboBoxItem Content="ЗАО"/>
                <ComboBoxItem Content="МКК"/>
                <ComboBoxItem Content="МФО"/>
                <ComboBoxItem Content="ОАО"/>
                <ComboBoxItem Content="ООО"/>
                <ComboBoxItem Content="ПАО"/>
            </ComboBox>
        </WrapPanel>
        <!--ПОСТРАНИЧНЫЙ ВЫВОД-->
        <StackPanel Grid.ColumnSpan="3"
                    Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Name="LeftDirButton"
                    Content="&lt;"
                    Width="20"
                    Height="20"
                    Click="LeftDirButton_Click"/>
            <ListBox FontSize="20"
                     Name="PageListBox"
                     MouseUp="PageListBox_MouseUp">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
            <Button Name="RightDirButton"
                    Content="&gt;"
                    Width="20"
                    Height="20"
                    Click="RightDirButton_Click"></Button>
        </StackPanel>
        <ListView Name="AgentListView"
                  Grid.Row="1"
                  Grid.ColumnSpan="3"
                  Width="auto">
            <ListView.ItemTemplate>
                <DataTemplate>

                    <Border BorderBrush="Black"
                            BorderThickness="2"
                            MinWidth="780">
                        <Grid Background="{Binding FonStyle}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Image Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.RowSpan="4"
                                   Stretch="Uniform"
                                   Margin="10"
                                   Height="100"
                                   Source="{Binding AgentLogo}">
                            </Image>
                            <WrapPanel Grid.Row="0"
                                       Grid.Column="1"
                                       Margin="5">
                                <TextBlock Text="{Binding AgentTypeTitle}"
                                           FontSize="20"/>
                                <TextBlock Text=" | "
                                           FontSize="20"/>
                                <TextBlock Text="{Binding Title}"
                                           FontSize="20"/>
                            </WrapPanel>

                            <TextBlock Text="{Binding SalesForYear, StringFormat={}{0} продаж за год}"
                                       Grid.Column="1"
                                       Grid.Row="1"
                                       FontSize="15"
                                       Margin="5"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding Phone}"
                                       Grid.Column="1"
                                       Grid.Row="2"
                                       FontSize="15"
                                       Margin="5"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding Priority, StringFormat={}Приоритетность: {0}}"
                                       Grid.Column="1"
                                       Grid.Row="3"
                                       FontSize="15"
                                       Margin="5"
                                       HorizontalAlignment="Left"/>
                            <TextBlock Text="{Binding Discount, StringFormat={}{0}%}"
                                       Grid.Column="2"
                                       Grid.RowSpan="4"
                                       FontSize="25"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>

                        </Grid>
                    </Border>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
